---
// src/layouts/Layout.astro
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Pendulum - A self-hosted, reactive Backend as a Service"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  html {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  html,
  body {
    scrollbar-gutter: stable;
    height: 100%;
    margin: 0;
  }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    background: var(--sl-color-white);
  }

  main {
    flex: 1;
  }
  .sl-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Link hover effects */
  a {
    transition: all 0.2s ease;
  }

  /* Mobile navigation */
  @media (max-width: 768px) {
    nav {
      flex-direction: column;
      gap: 1rem;
    }

    nav > div {
      gap: 1rem !important;
    }

    .sl-container {
      padding: 0 1rem;
    }
  }
</style>
